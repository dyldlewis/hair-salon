<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <title>Hair Salon</title>
</head>
<body>
  <div class="container">
    <h1>{{ stylist.getName }}</h1>
    <p><a href="/stylists/{{ stylist.getId }}/edit">Edit this stylist</a></p>

    {% if clients is not empty %}
      <p>Here are the clients:</p>
      <ul>
        {% for client in clients %}
          <li><a href="/clients/{{ client.getId }}/edit">{{ client.getName }}</a></li>
        {% endfor %}
      </ul>
    {% endif %}

    <h4>Add a client</h4>

    <form action='/clients' method='post'>
        <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
        <label for='name'>Client name</label>
        <input id='name' name='name' type='text'>

        <button type='submit'>Add client</button>
    </form>

    <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
